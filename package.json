{
	"name": "hot-soup",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"homepage": "./",
	"scripts": {
		"dev": "vite",
		"dev:gh": "vite --mode gh",
		"build:gh": "tsc && vite build --mode gh",
		"build": "tsc && vite build ",
		"preview": "vite preview",
		"preview:gh": "vite preview --mode gh",
		"prepare": "husky install",
		"eslint": "eslint src",
		"test": " vitest --coverage",
		"coverage": "vitest run --coverage",
		"deploy": "deploy.sh",
		"sonar-scanner": "yarn run coverage && node_modules/sonar-scanner/bin/sonar-scanner"
	},
	"dependencies": {
		"@emotion/react": "^11.10.5",
		"@emotion/styled": "^11.10.5",
		"@fontsource/roboto": "^4.5.8",
		"@mui/icons-material": "^5.11.0",
		"@mui/material": "^5.11.7",
		"loadsh": "^0.0.4",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-redux": "^8.0.5",
		"react-router": "^6.8.1",
		"react-router-dom": "^6.8.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.4.2",
		"@commitlint/config-conventional": "^17.4.2",
		"@testing-library/react": "^13.4.0",
		"@testing-library/user-event": "^14.4.3",
		"@types/lodash": "^4.14.191",
		"@types/node": "^18.13.0",
		"@types/react": "^18.0.28",
		"@types/react-dom": "^18.0.10",
		"@typescript-eslint/eslint-plugin": "^5.50.0",
		"@typescript-eslint/parser": "^5.50.0",
		"@vitejs/plugin-react-swc": "^3.0.0",
		"@vitest/coverage-c8": "^0.28.4",
		"eslint": "^8.0.1",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"husky": "^8.0.3",
		"jsdom": "^21.1.0",
		"lint-staged": "^13.1.0",
		"localforage": "^1.10.0",
		"match-sorter": "^6.3.1",
		"path": "^0.12.7",
		"prettier": "^2.5.1",
		"sonar-scanner": "^3.1.0",
		"sort-by": "^1.2.0",
		"typescript": "^4.9.5",
		"vite": "^4.1.0",
		"vitest": "^0.28.4"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "deploy"
		}
	},
	"lint-staged": {
		"src/**/*.{js,json,jsx,ts,tsx}": "eslint --fix --cache",
		"src/**/*.{css,scss}": "eslint --fix --cache"
	}
}
